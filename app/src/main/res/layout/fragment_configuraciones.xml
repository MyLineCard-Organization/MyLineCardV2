<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Configuraciones">

    <FrameLayout
        android:id="@+id/partOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center"
        android:background="#D1D5DB">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/partTwo"
                    android:layout_width="match_parent"
                    android:layout_height="275dp"
                    android:background="#00B1AC">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="232dp"
                            android:layout_height="170dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="50dp"
                            android:layout_weight="1"
                            android:src="@drawable/profile" />

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="match_parent"
                            android:layout_height="89dp"
                            android:layout_weight="1"

                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text="Perfil"
                            android:textColor="@color/white"
                            android:textSize="30dp" />
                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginEnd="20sp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Nombres"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_admin_names"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="20sp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Apellidos"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_admin_surnames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"

                    android:layout_marginEnd="20sp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="NÃºmero de telefono"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_passeger_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:ems="10"
                    android:inputType="numberSigned" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginEnd="20sp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Direccion"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_admin_names2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/btn_admin_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginBottom="5sp"
                    android:backgroundTint="#323643"
                    android:text="Guardar"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>

</FrameLayout>