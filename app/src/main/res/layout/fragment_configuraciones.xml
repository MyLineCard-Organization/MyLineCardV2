<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Configuraciones">

    <FrameLayout
        android:id="@+id/partOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center"
        android:background="#D1D5DB">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="576dp"
            android:layout_gravity="bottom|center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginEnd="20sp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Nombres"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_passager_names"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="20sp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Apellidos"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_passeger_surnames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="20sp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Contraseña"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_passeger_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:ems="10"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"

                    android:layout_marginEnd="20sp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Número de telefono"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_passeger_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:ems="10"
                    android:inputType="numberSigned" />

                <Button
                    android:id="@+id/btn_enlace_pago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginBottom="5sp"
                    android:backgroundTint="#323643"
                    android:text="Guardar"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/partTwo"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:background="#00B1AC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/lineas_Afiliadas_btn"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:src="@drawable/arrow"
                app:backgroundTint="@android:color/transparent" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="232dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_weight="1"

                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Perfil"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </LinearLayout>

    </FrameLayout>

</FrameLayout>