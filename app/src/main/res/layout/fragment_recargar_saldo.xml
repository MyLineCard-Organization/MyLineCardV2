<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context=".Recargar_saldo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/partTwo"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:background="#00B1AC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:gravity="bottom"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="70sp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="Recargar Saldo"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="196dp"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:src="@drawable/coin" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/partOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="@style/SCREEN">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:paddingTop="25dp"
                    android:text="Ingresa el monto a recargar:"
                    style="@style/TEXT"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="right"
                        android:text="S/"
                        android:textSize="20dp"
                        style="@style/TEXT" />

                    <EditText
                        android:id="@+id/edit_recargar_saldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:fontFamily="@font/poppins_medium"
                        style="@style/EDIT_TEXT"
                        android:inputType="numberDecimal"
                        tools:text="0.00" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_admin_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="@font/poppins_medium"
                    style="@style/BUTTON_PRINCIPAL"
                    android:text="Generar enlace de pago"
                    app:cornerRadius="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        style="@style/TEXT"
                        android:paddingTop="25dp"
                        android:text="&quot;Da click en el link para pagar&quot;" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="20sp"
                            style="@style/TEXT"
                            android:text="powered by" />

                        <ImageView
                            android:id="@+id/imageView33"
                            android:layout_width="120sp"
                            android:layout_height="40sp"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/logoopenpay" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </FrameLayout>

    </LinearLayout>

</FrameLayout>