                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/edit_passeger_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="numberSigned" />

                            <CheckBox
                                android:id="@+id/checkBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:text="Acepto PolÃ­ticas de Privacidad" />

                            <CheckBox
                                android:id="@+id/checkBox2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:text="Acepto TÃ©rminos y Condiciones" />

                            <Button
                                android:id="@+id/registro_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:layout_marginBottom="5sp"
                                android:backgroundTint="#323643"
                                android:onClick="saveNewPassenger"
                                android:text="Registrarse"
                                android:textColor="@color/white"
                                app:cornerRadius="15dp" />



                        </LinearLayout>
                    </ScrollView>
                </FrameLayout>

            </TableRow>

        </TableLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>