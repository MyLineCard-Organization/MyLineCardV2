<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:background="#00B1AC"

    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context=".Registro_pasajero">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:foregroundGravity="bottom|center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_weight="3"
                android:gravity="center|start">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:onClick="back"
                        android:scaleType="centerCrop"
                        app:backgroundTint="@android:color/transparent"
                        app:srcCompat="@drawable/arrow_write" />

                    <Space
                        android:layout_width="56dp"
                        android:layout_height="23dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:text="Registro"
                        android:textColor="@color/white"
                        android:textSize="25dp" />

                    <Space
                        android:layout_width="107dp"
                        android:layout_height="19dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="163dp"
                        android:layout_height="41dp"
                        android:backgroundTint="#FFFFFF"
                        android:insetBottom="0dp"
                        android:text="Pasajero"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="163dp"
                        android:layout_height="41dp"
                        android:backgroundTint="#00B1AC"
                        android:insetTop="5dp"
                        android:insetBottom="0dp"
                        android:onClick="administrador"
                        android:text="Administrador"
                        android:textColor="@color/white" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="center"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ScrollView
                        android:id="@+id/scrollView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/SCREEN">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="20sp"
                            android:layout_marginBottom="15sp">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="15sp"
                                android:layout_marginEnd="20sp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Nombres"
                                style="@style/TEXT"/>

                            <EditText
                                android:id="@+id/edit_passenger_names"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="textPersonName"
                                style="@style/EDIT_TEXT"/>

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Apellidos"
                                style="@style/TEXT"/>

                            <EditText
                                android:id="@+id/edit_passenger_surnames"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="textPersonName"
                                style="@style/EDIT_TEXT" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Correo"
                                style="@style/TEXT"/>

                            <EditText
                                android:id="@+id/edit_passenger_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="textEmailAddress"
                                style="@style/EDIT_TEXT" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Contraseña"
                                style="@style/TEXT"/>
                            <TextView
                                android:id="@+id/textView34564"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_weight="2"
                                android:textSize="10dp"
                                android:layout_marginEnd="20sp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="(La contraseña debe tener al menos 6 caracteres, mayúsculas, minúsculas y números)"
                                android:textColor="#EA3323" />

                            <EditText
                                android:id="@+id/edit_passenger_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="textPassword"
                                style="@style/EDIT_TEXT" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Confirmar contraseña"
                                style="@style/TEXT"/>

                            <EditText
                                android:id="@+id/edit_passenger_confirm_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="textPassword"
                                style="@style/EDIT_TEXT" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Dirección"
                                style="@style/TEXT"/>

                            <EditText
                                android:id="@+id/edit_passenger_direction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="textPersonName"
                                style="@style/EDIT_TEXT" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Número de telefono"
                                style="@style/TEXT"/>

                            <EditText
                                android:id="@+id/edit_passeger_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="numberSigned"
                                style="@style/EDIT_TEXT" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/checkBox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20sp"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginEnd="20sp"
                                    android:text="Acepto Políticas de Privacidad"
                                    style="@style/TEXT" />

                                <ImageButton
                                    android:id="@+id/btn_politicas_pasajero"
                                    android:layout_width="37dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom|center"
                                    android:background="@android:color/transparent"
                                    app:srcCompat="@drawable/help" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/checkBox2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="20sp"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginEnd="20sp"
                                    android:text="Acepto Términos y Condiciones"
                                    style="@style/TEXT"/>
                                <ImageButton
                                    android:id="@+id/btn_terminos_pasajero"
                                    android:layout_width="37dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom|center"
                                    android:background="@android:color/transparent"
                                    app:srcCompat="@drawable/help" />
                            </LinearLayout>
                            <ProgressBar
                                android:id="@+id/progressBar_pasajero"
                                style="?android:attr/progressBarStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/btn_register_pasajero"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:text="Registrarse"
                                style="@style/BUTTON_PRINCIPAL"
                                app:cornerRadius="15dp" />


                        </LinearLayout>
                    </ScrollView>
                </FrameLayout>

            </TableRow>

        </TableLayout>
    </FrameLayout>

</ScrollView>