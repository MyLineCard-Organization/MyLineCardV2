                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="textPersonName" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
