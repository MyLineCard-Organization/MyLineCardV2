<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        style="@style/SCREEN">

        <TextView
            android:id="@+id/txt_comentario_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Name"
            android:textSize="18dp"
            style="@style/TEXT"/>


        <TextView
            android:id="@+id/txt_comentario_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="text"
            android:textSize="17dp"
            style="@style/TEXT" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_respuesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:lines="4"
                android:inputType="textPersonName"
                android:hint="Respuesta"
                android:gravity="top"
                style="@style/EDIT_TEXT"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_mostrar_respuesta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BUTTON_PRINCIPAL"
                    android:text="Ver comentarios"
                    android:textSize="12dp"
                    app:cornerRadius="15dp" />

                <Button
                    android:id="@+id/btn_responder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    style="@style/BUTTON_PRINCIPAL"
                    android:text="Enviar"
                    app:cornerRadius="15dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>