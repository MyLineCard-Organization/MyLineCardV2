<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323643"
    tools:context=".Registro_administrador"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:foregroundGravity="bottom|center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center|start">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:onClick="back"
                        android:scaleType="centerCrop"
                        app:backgroundTint="@android:color/transparent"
                        app:srcCompat="@drawable/arrow_write" />

                    <Space
                        android:layout_width="56dp"
                        android:layout_height="23dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:text="Registro"
                        android:textColor="@color/white"
                        android:textSize="25dp" />

                    <Space
                        android:layout_width="107dp"
                        android:layout_height="19dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="163dp"
                        android:layout_height="41dp"
                        android:backgroundTint="#00B1AC"
                        android:textColor="@color/white"
                        android:insetBottom="0dp"
                        android:text="Pasajero"
                        android:onClick="pasajero" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="163dp"
                        android:layout_height="41dp"
                        android:insetTop="5dp"
                        android:insetBottom="0dp"
                        android:backgroundTint="#FFFFFF"
                        android:textColor="@color/black"
                        android:text="Administrador" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="738dp"
                android:foregroundGravity="center"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ScrollView
                        android:id="@+id/scrollView2"
                        android:layout_width="393dp"
                        android:layout_height="match_parent"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="15sp"
                                android:layout_marginEnd="20sp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Nombres"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/edit_admin_names"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="textPersonName" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Apellidos"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/edit_admin_surnames"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="textPersonName" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Correo"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/edit_admin_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="textEmailAddress" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Contraseña"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/edit_admin_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="textPassword" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Confirmar contraseña"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/edit_admin_confirm_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="textPassword" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Dirección"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/edit_admin_direction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="textPersonName" />



                            <TextView
                                android:id="@+id/validate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Código de validación"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/edit_admin_codigo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                android:ems="10"
                                android:inputType="text" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/checkBox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20sp"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginEnd="20sp"
                                    android:text="Acepto Políticas de Privacidad" />

                                <ImageButton
                                    android:id="@+id/btn_politicas_admin"
                                    android:layout_width="37dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom|center"
                                    android:background="@color/fui_transparent"
                                    app:srcCompat="@drawable/help" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/checkBox2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="20sp"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginEnd="20sp"
                                    android:text="Acepto Términos y Condiciones" />
                                <ImageButton
                                    android:id="@+id/btn_terminos_admin"
                                    android:layout_width="37dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom|center"
                                    android:background="@color/fui_transparent"
                                    app:srcCompat="@drawable/help" />
                            </LinearLayout>

                            <Button
                                android:id="@+id/btn_admin_register"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="20sp"
                                android:layout_marginBottom="5sp"
                                android:text="Registrarse"
                                android:backgroundTint="#323643"
                                android:textColor="@color/white"
                                app:cornerRadius="15dp" />
                        </LinearLayout>
                    </ScrollView>
                </FrameLayout>

            </TableRow>

        </TableLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>